{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",

		/* Linting */
		"strict": true,
		// "noUnusedLocals": true, // changed (removed)
		// "noUnusedParameters": true, // changed (removed)
		"noFallthroughCasesInSwitch": true,
		"allowJs": true, // changed (added)
		"checkJs": false, // changed (added)
		"noImplicitAny": false, // changed (added)
		"noImplicitThis": false, // changed (added)
		"baseUrl": "./", // changed (added)
		"paths": { // changed (added)
			"react": ["./node_modules/preact/compat"],
			"react-dom": ["./node_modules/preact/compat"]
		}
	},
	"include": ["src/types/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
